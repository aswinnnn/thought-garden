{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "thought-garden",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "dialog": {
                "all": true
            }
        },
        "windows": [
            {
                "title": "thought-garden",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null,
            "dangerousRemoteDomainIpcAccess": [
                {
                    "windows": ["main"],
                    "domain": "localhost",
                    "enableTauriAPI": true
                }
            ]
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.aswin.thoughtgarden",
            "resources": ["../src/main.ts"],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
